local FluxLibrary = {}

local function createWindow(title, subtitle, color, keybind)
    local ScreenGui = Instance.new("ScreenGui")
    ScreenGui.Parent = game.Players.LocalPlayer:WaitForChild("PlayerGui")

    local MainFrame = Instance.new("Frame")
    MainFrame.Parent = ScreenGui
    MainFrame.BackgroundColor3 = color
    MainFrame.Size = UDim2.new(0, 500, 0, 300)
    MainFrame.Position = UDim2.new(0.1, 0, 0.1, 0)

    local TitleLabel = Instance.new("TextLabel")
    TitleLabel.Parent = MainFrame
    TitleLabel.Text = title .. " - " .. subtitle
    TitleLabel.Size = UDim2.new(1, 0, 0, 50)
    TitleLabel.TextColor3 = Color3.fromRGB(255, 255, 255)
    TitleLabel.BackgroundColor3 = Color3.fromRGB(0, 0, 0)

    return {
        Frame = MainFrame,
        AddTab = function(tabName, iconURL)
            local TabButton = Instance.new("TextButton")
            TabButton.Parent = MainFrame
            TabButton.Text = tabName
            TabButton.Size = UDim2.new(0, 150, 0, 50)
            TabButton.Position = UDim2.new(0, 0, 0, 50 + (#MainFrame:GetChildren() * 60))
            TabButton.TextColor3 = Color3.fromRGB(255, 255, 255)
            TabButton.BackgroundColor3 = Color3.fromRGB(30, 30, 30)

            return {
                AddButton = function(btnName, btnDesc, callback)
                    local Button = Instance.new("TextButton")
                    Button.Parent = MainFrame
                    Button.Text = btnName .. ": " .. btnDesc
                    Button.Size = UDim2.new(0, 150, 0, 50)
                    Button.Position = UDim2.new(0, 200, 0, 50 + (#MainFrame:GetChildren() * 60))
                    Button.TextColor3 = Color3.fromRGB(255, 255, 255)
                    Button.BackgroundColor3 = Color3.fromRGB(50, 50, 50)

                    Button.MouseButton1Click:Connect(function()
                        callback()
                    end)
                end,
                AddLabel = function(text)
                    local Label = Instance.new("TextLabel")
                    Label.Parent = MainFrame
                    Label.Text = text
                    Label.Size = UDim2.new(0, 150, 0, 50)
                    Label.Position = UDim2.new(0, 200, 0, 100 + (#MainFrame:GetChildren() * 60))
                    Label.TextColor3 = Color3.fromRGB(255, 255, 255)
                    Label.BackgroundColor3 = Color3.fromRGB(40, 40, 40)
                end
            }
        end
    }
end

FluxLibrary.Window = createWindow
return FluxLibrary
